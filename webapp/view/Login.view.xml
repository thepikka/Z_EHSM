<mvc:View controllerName="ehsm.controller.Login"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f">
    <Page id="loginPage" showHeader="false" class="loginPageBackground">
        <content>
            <FlexBox direction="Column" alignItems="Center" justifyContent="Center" height="100%">
                <VBox class="loginCard sapUiMediumMargin" width="450px" alignItems="Center">
                    <core:Icon src="sap-icon://customer" size="4rem" color="#4f46e5" class="sapUiMediumMarginBottom"/>
                    <Title text="Safety Portal" titleStyle="H1" class="loginTitle sapUiSmallMarginBottom"/>
                    <Text text="EHSM Engineering Management" class="loginSubtitle sapUiSmallMarginBottom"/>
                    
                    <VBox width="100%" class="sapUiSmallMarginTop">
                        <Label text="Employee ID" labelFor="usernameInput" design="Bold"/>
                        <Input id="usernameInput" placeholder="e.g. 00000001" maxLength="8" width="100%" class="loginInput">
                            <layoutData>
                                <FlexItemData growFactor="1"/>
                            </layoutData>
                        </Input>
                    </VBox>

                    <VBox width="100%" class="sapUiSmallMarginTop">
                        <Label text="Password" labelFor="passwordInput" design="Bold"/>
                        <Input id="passwordInput" type="Password" placeholder="••••••••" width="100%" class="loginInput"/>
                    </VBox>

                    <Button text="Sign In" type="Emphasized" width="100%" press=".onLoginPress" class="sapUiLargeMarginTop loginButton"/>
                    
                    <Link text="Forgot Password?" class="sapUiSmallMarginTop" subtle="true"/>
                </VBox>
                <Text text="© 2026 EHSM Inc. All rights reserved." class="loginFooterText sapUiMediumMarginTop"/>
            </FlexBox>
        </content>
    </Page>
</mvc:View>

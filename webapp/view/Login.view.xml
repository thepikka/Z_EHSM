<mvc:View controllerName="ehsm.controller.Login"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f">
    <Page id="loginPage" showHeader="false" class="sapUiContentPadding loginPageBackground">
        <content>
            <VBox class="loginContainer" justifyContent="Center" alignItems="Center" height="100%">
                <VBox class="loginCard sapUiMediumMargin" width="400px">
                    <items>
                        <Title text="Safety Engineer Portal" titleStyle="H1" class="loginTitle sapUiTinyMarginBottom"/>
                        <Text text="Secure Access" class="loginSubtitle sapUiSmallMarginBottom"/>
                        
                        <VBox class="sapUiSmallMarginTop">
                            <Label text="Employee ID" labelFor="usernameInput" design="Bold"/>
                            <Input id="usernameInput" placeholder="Enter your Employee ID" width="100%" class="loginInput"/>
                        </VBox>

                        <VBox class="sapUiSmallMarginTop">
                            <Label text="Password" labelFor="passwordInput" design="Bold"/>
                            <Input id="passwordInput" type="Password" placeholder="Enter your Password" width="100%" class="loginInput"/>
                        </VBox>

                        <Button text="Login" type="Emphasized" width="100%" press=".onLoginPress" class="sapUiMediumMarginTop loginButton"/>
                    </items>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>

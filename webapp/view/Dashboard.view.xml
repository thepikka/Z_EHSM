<mvc:View controllerName="ehsm.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f">
    <Page title="Safety Engineer Dashboard" class="dashboardPage">
        <headerContent>
            <core:Fragment fragmentName="ehsm.view.Header" type="XML" />
        </headerContent>
        <content>
            <VBox class="sapUiLargeMargin">
                <Title text="Safety Portal Management" titleStyle="H2" class="sapUiMediumMarginBottom"/>
                <layout:Grid defaultSpan="L6 M6 S12" hSpacing="2" vSpacing="2">
                    <f:Card class="dashboardTile" press=".onIncidentTilePress">
                        <f:header>
                            <f:CardHeader title="Incident Management" subtitle="Track and report workplace incidents" iconSrc="sap-icon://alert" />
                        </f:header>
                        <f:content>
                            <VBox class="sapUiMediumMargin" alignItems="Center">
                                <core:Icon src="sap-icon://warning" size="3rem" color="Critical" class="sapUiSmallMarginBottom"/>
                                <Text text="Manage workplace safety reports and investigation status" textAlign="Center" class="customCardSubheader"/>
                            </VBox>
                        </f:content>
                    </f:Card>
                    
                    <f:Card class="dashboardTile" press=".onRiskTilePress">
                        <f:header>
                            <f:CardHeader title="Risk Assessment" subtitle="Evaluate and mitigate safety risks" iconSrc="sap-icon://physical-activity" />
                        </f:header>
                        <f:content>
                            <VBox class="sapUiMediumMargin" alignItems="Center">
                                <core:Icon src="sap-icon://shield" size="3rem" color="Positive" class="sapUiSmallMarginBottom"/>
                                <Text text="Identify potential hazards and implement mitigation strategies" textAlign="Center" class="customCardSubheader"/>
                            </VBox>
                        </f:content>
                    </f:Card>
                </layout:Grid>
            </VBox>
        </content>
    </Page>
</mvc:View>
